<%-include("./include/header.ejs")%>

<body>
    <h1>My Data : @ <%=data.name%></h1>
    <button onclick="increaseFollow()" style="background: royalblue; color: white; padding: .8rem 3rem; border-radius: 20px; border: 0;">Follow</button>
    <button style="background: royalblue; color: white; padding: .8rem 3rem; border-radius: 20px; border: 0;">Message</button>
    <h2>Followers Count: <span id="followerCount">0</span></h2>
    <h3>Followarse : <%=data.followers%> &nbsp;&nbsp;&nbsp; Following : <%=data.following%> </h3>
    <h2>
        <%for(let post of data.posts){%>
            <h3>
                <img src="<%=post.image%>" alt=""><br>
                <p>Likes : <%=post.likes%> &nbsp;&nbsp;
                    Comments : <%=post.comments%></p>
                </h3>
                <%}%>
    </h2>
    
    

    <script src="/Script.js"></script>
</body>
</html>
